                  "type": "string",
                  "example": "Latest 5G smartphone with AMOLED display"
                },
                "category": {
                  "type": "string",
                  "example": "Electronics"
                },
                "subCategory": {
                  "type": "string",
                  "example": "Mobiles"
                },
                "images": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "fileId": {
                        "type": "string",
                        "example": "file_elec_001"
                      },
                      "file_url": {
                        "type": "string",
                        "example": "https://ik.imagekit.io/aalam855/MyMedia/samsumgS1.jpg?updatedAt=1757240096812"
                      }
                    }
                  }
                },
                "sale_price": {
                  "type": "number",
                  "example": 699
                },
                "regular_price": {
                  "type": "number",
                  "example": 799
                },
                "colors": {
                  "type": "array",
                  "items": { "type": "string" },
                  "example": ["black", "blue"]
                },
                "sizes": {
                  "type": "array",
                  "items": { "type": "string" },
                  "example": []
                },
                "stock": {
                  "type": "integer",
                  "example": 50
                },
                "warranty": {
                  "type": "string",
                  "example": "1 year warranty"
                }
              },
              "required": [
                "title",
                "description",
                "category",
                "subCategory",
                "images",
                "sale_price",
                "regular_price",
                "colors",
                "stock"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Product created successfully"
          }
        }
      }
    },
