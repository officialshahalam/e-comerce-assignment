    "/create-product": {
      "post": {
        "description": "Create a new product",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "example": "Smartphone X1"
                },
